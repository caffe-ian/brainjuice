pragma solidity >=0.7.0 <0.9.0;

contract BrainJuice is ERC721, Ownable {
    using Strings for uint256;
    using Counters for Counters.Counter;

    Counters.Counter private supply;

    string public URI = "https://brainjuicenft.up.railway.app/api/metadata/";
    string public hidden = "https://brainjuicenft.up.railway.app/api/metadata/hidden.json";
    uint256 public cost = 0.1 ether;
    uint256 public wCost = 0.08 ether;
    uint256 public phase = 1;

    bool public paused = true;
    bool public presale = true;

    bytes32 public root;

    constructor() ERC721("Brain Juice", "BJ") {
    }

    function csupply() public view returns (uint256) {
        return supply.current();
    }

    function mint(uint256 mintAmount, bytes32[] calldata proof) public payable {
        require(!paused, "0");
        require(mintAmount > 0, "5");
        require(supply.current() + mintAmount <= phase * 2000, "1");
        if (presale) {
            require(msg.value >= wCost * mintAmount, "2");
            require(MerkleProof.verify(proof, root, keccak256(abi.encodePacked(msg.sender))), "3");
        }
        else {
            require(msg.value >= cost * mintAmount, "2");
        }
        for (uint256 i = 0; i < mintAmount; i++) {
            supply.increment();
            _mint(msg.sender, supply.current());
        }
    }

    function wlRoot(bytes32 nr) public onlyOwner {
        root = nr;
    }

    function nftsOwned(address _owner)
    public
    view
    returns (uint256[] memory)
    {
        uint256 oTC = balanceOf(_owner);
        uint256[] memory oT = new uint256[](oTC);
        uint256 tokenId = 1;
        uint256 total = 0;

        while (total < oTC && tokenId <= phase * 2000) {
            if (ownerOf(tokenId) == _owner) {
                oT[total] = tokenId;

                total++;
            }
            tokenId++;
        }
        return oT;
    }

    // Important
    function tokenURI(uint256 tokenId)
        public
        view
        virtual
        returns (string memory)
    {
        require(_exists(tokenId), "4");

        if (tokenId > (phase - 1) * 2000) {
            return hidden;
        }

        return string(abi.encodePacked(URI, tokenId.toString(), ".json"));
    }

    // Owner only
    function giveaway(address target) public onlyOwner {
        require(supply.current() + 1 <= phase * 2000, "1");
        supply.increment();
        _mint(target, supply.current());
    }

    function Phase(uint256 n) public onlyOwner {
        paused = true;
        presale = true;
        phase = n;
    }

    function pause(bool b) public onlyOwner {
        paused = b;
    }

    function Presale(bool b) public onlyOwner {
        presale = b;
    }

    function Cost(uint256 nc) public onlyOwner {
        cost = nc * 1 ether;
    }

    function wlCost(uint256 nc) public onlyOwner {
        wCost = nc * 1 ether;
    }

    function uri(string calldata nURI) public onlyOwner {
        URI = nURI;
    }

    function hUri(string calldata nh) public onlyOwner {
        hidden = nh;
    }

    //*****//
    function withdraw(address payee) public payable onlyOwner returns (bool) {
        (bool os, ) = payable(payee).call{value: msg.value}("");
        require(os);
        return os;
    }
}
